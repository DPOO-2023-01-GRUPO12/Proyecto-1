package hotel;

public class Restaurante
{
    private String ubicacion;
    private Map<String, ArrayList<String>> disponibilidad;
    private ArrayList<ProductoMenu> productosMenu;

    public Restaurante(String ubicacion)
    {
        this.ubicacion = ubicacion;
        this.productosMenu = new ArrayList <ProductoMenu>();
        this.disponibilidad = new HashMap<>();
    }

    public void agregarProductoMenu(ProductoMenu producto)
    {
        productosMenu.add(producto);
    }

    public void agregarDisponibilidad(String dia, ArrayList<String> horas)
    {
        disponibilidad.put(dia, horas);
    }

    public ArrayList getProductosMenu()
    {
        return productosMenu;

    }
}